<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="60dp"
    android:orientation="vertical">

    <RadioGroup
        android:id="@+id/notice_radioGroup"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal"
        android:background="@color/bottom_bg">

        <RadioButton
            android:id="@+id/posted"
            style="@style/BottomRadioButton"
            android:text="@string/notice_posted"
            android:drawableTop="@drawable/bottom_notice_radiobtn_posted_icon_select"
            android:checked="true"/>

        <RadioButton
            android:id="@+id/unpost"
            style="@style/BottomRadioButton"
            android:text="@string/notice_unpost"
            android:drawableTop="@drawable/bottom_notice_radiobtn_unpost_icon_select"/>

        <RadioButton
            android:id="@+id/undone"
            style="@style/BottomRadioButton"
            android:text="@string/notice_undone"
            android:drawableTop="@drawable/bottom_notice_radiobtn_undone_icon_select"/>

        <RadioButton
            android:id="@+id/expired"
            style="@style/BottomRadioButton"
            android:text="@string/notice_expired"
            android:drawableTop="@drawable/bottom_notice_radiobtn_expired_icon_select"/>

    </RadioGroup>

</LinearLayout>